{
  "name": "crypto-convert",
  "private": true,
  "version": "1.0.1",
  "scripts": {
    "watch": "NODE_ENV=dev npm-watch",
    "dev": "vite build --mode development --watch",
    "build": "tsc && vite build && gzip dist --extension=zip",
    "preview": "vite preview"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "js,ts,tsx,html",
      "runOnChangeOnly": false
    }
  },
  "dependencies": {
    "@emailjs/browser": "^3.5.0",
    "@hookform/resolvers": "^2.8.8",
    "classnames": "^2.3.1",
    "clipboard": "^2.0.10",
    "coingecko-api": "^1.0.10",
    "date-fns": "^2.28.0",
    "rc-slider": "^10.0.0-alpha.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.29.0",
    "react-query": "^3.34.19",
    "react-window": "^1.8.6",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.180",
    "@types/coingecko-api": "^1.0.10",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@types/react-window": "^1.8.5",
    "@vitejs/plugin-react": "^1.0.7",
    "autoprefixer": "^10.4.4",
    "gzip-cli": "^1.2.0",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.4",
    "vite": "^2.9.1",
    "vite-plugin-chrome-extension": "^0.0.7",
    "vite-plugin-svg-icons": "^2.0.1"
  }
